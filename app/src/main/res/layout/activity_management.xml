<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <Gallery
                android:id="@+id/gallery1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spacing="5dp" />

            <ImageView
                android:id="@+id/cat_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_feed1"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="상태"
                app:backgroundTint="#DAFF7A7A" />

            <Button
                android:id="@+id/btn_board1"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="게시판"
                app:backgroundTint="#DAFF7A7A" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="438dp"
            android:background="#DAFF7A7A"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="     밥"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/empty_feed1"
                    android:layout_width="74dp"
                    android:layout_height="94dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_cat" />

                <ImageView
                    android:id="@+id/empty_feed2"
                    android:layout_width="74dp"
                    android:layout_height="94dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_cat" />

                <ImageView
                    android:id="@+id/empty_feed3"
                    android:layout_width="74dp"
                    android:layout_height="94dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_cat" />

                <ImageView
                    android:id="@+id/empty_feed4"
                    android:layout_width="74dp"
                    android:layout_height="94dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_cat" />
            </LinearLayout>

            <TextView
                android:id="@+id/snack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     간식"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/empty_snack1"
                        android:layout_width="74dp"
                        android:layout_height="94dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty_snack" />

                    <ImageView
                        android:id="@+id/empty_snack2"
                        android:layout_width="74dp"
                        android:layout_height="94dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty_snack" />

                    <ImageView
                        android:id="@+id/empty_snack3"
                        android:layout_width="74dp"
                        android:layout_height="94dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty_snack" />

                    <ImageView
                        android:id="@+id/empty_snack4"
                        android:layout_width="74dp"
                        android:layout_height="94dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty_snack" />
                </LinearLayout>
            <TextView
                android:id="@+id/water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     물"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_finish1"
                android:layout_width="413dp"
                android:layout_height="59dp"
                android:background="#DAFF7A7A"
                android:text="FINISH"
                app:backgroundTint="#D55656" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>